{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "emitDeclarationOnly": false,
    "allowJs": false,
    "isolatedModules": true,
    "jsxImportSource": "react",
    "typeRoots": [             
      "./node_modules/@types",
      "./src/types"
    ],
    "noEmit": false,
    "rootDir": "src",
    "types": ["node"]
  },
  "include": [
    "src",
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.tsx",
    "**/__mocks__/**"
  ]
}